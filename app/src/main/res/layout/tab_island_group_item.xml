<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/islandGroupCard"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="4dp"
    android:clickable="false"
    android:focusable="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
    >

        <!-- Colored vertical pill indicator on the left edge -->
        <View
            android:id="@+id/islandColorIndicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
        />

        <!-- Island header section (name + collapse button) -->
        <LinearLayout
            android:id="@+id/islandHeaderSection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
        >

            <!-- Island name -->
            <TextView
                android:id="@+id/islandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/island"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:fontFamily="sans-serif-medium"
                android:maxLength="15"
                android:singleLine="true"
                android:ellipsize="end"
            />

            <!-- Collapse/Expand button -->
            <ImageView
                android:id="@+id/islandCollapseButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_expand_less"
                android:contentDescription="@string/collapse_or_expand_island"
                android:scaleType="centerInside"
                app:tint="?android:attr/textColorSecondary" />

        </LinearLayout>

        <!-- Container for tab pills (will be populated dynamically) -->
        <LinearLayout
            android:id="@+id/islandTabsContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
        />

        <!-- Separator before plus button -->
        <View
            android:id="@+id/plusButtonSeparator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="6dp"
            android:background="?android:attr/textColorSecondary"
            android:alpha="0.15"
        />

        <!-- Plus button to add new tab to island -->
        <ImageView
            android:id="@+id/islandPlusButton"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="@string/add_new_tab_to_island"
            android:tint="?android:attr/textColorSecondary"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
        />

    </LinearLayout>

</androidx.cardview.widget.CardView>
